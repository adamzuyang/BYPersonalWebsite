<!DOCTYPE html>
<html lang="en">
<head>
    <title>Barnett Yang</title>
    <meta name="description" content="Barnett Yang's Personal Portfolio" />

    <%- include('partials/head.ejs') %>
    <link href="css/project.css" rel="stylesheet">
</head>

<body>
    <%- include('partials/navbar.ejs') %>

    <section class="py-5 mb-5" data-aos="fade-up" id="projects">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 mx-auto text-center">
                    <h2 class="mt-3 mb-4"><%= name %></h2>
                    <hr style="width: 20%">
                </div>
            </div>

            <div class="row mt-2 pt-3">
                <div class="col-md-5">
                    <p class="pt-1 mb-2r"><img src="<%= image %>" style="width:100%; height:100%;"/></p>
                </div>
                <div class="col-md-7">
                    <h4 style="font-weight: 600;"><%= category %></h4>
                    <div class="text"><%- description %></div>

                        <li><strong>Year</strong><p><%= dateRange %></p></li>

                    <br>
                    <a href="<%= link %>" target="_blank"><button class="btn">View Project</button></a>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/scripts.ejs') %>
</body>

</html>