<!DOCTYPE html>
<html lang="en">
<head>
    <title>BY PATH</title>
    <meta name="description" content="Barnett Yang's Personal Portfolio" />

    <%- include('partials/head.ejs') %>
    <link href="css/main.css" rel="stylesheet">
</head>

<body>
    <%- include('partials/navbar.ejs') %>

    <section id="PATH">
        <div class="container-fluid py-md-3 mb-5">
            <!-- Alert Modal -->
            <div class="modal fade" id="pathAlertsModal" tabindex="-1" role="dialog" aria-labelledby="pathAlertsLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Path Alerts</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body" id="pathAlerts">
                            Loading...
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8 mx-auto text-center">
                    <h2 class="mt-1">Departures</h2>
                    <h6>Times are in ET</h6>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-warning btn-sm mb-4" data-toggle="modal" data-target="#pathAlertsModal" id="pathAlertsButton">
                        See Alerts
                    </button>
                </div>
            </div>

            <div class="row" align="center" data-aos="fade-up" data-aos-duration="500" id="pathDepartures">
                <!--Contents set by Javascript-->
                <div class="col-lg-3"><p>Loading...</p></div>
            </div>
        </div>
    </section>
    
    <%- include('partials/scripts.ejs') %>
    <script src="js/path.js"></script>
</body>

</html>
