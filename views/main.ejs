<!DOCTYPE html>
<html lang="en">
<head>
    <title>Barnett Yang</title>
    <meta name="description" content="Barnett Yang's Personal Portfolio" />

    <%- include('partials/head.ejs') %>
    <link href="css/main.css" rel="stylesheet">
</head>

<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container-fluid">
        <div class="row hero" style="background-image:<%= hero.hero_img %>">
            <div class="hero-content-wrapper">
                <div class="hero-content">
                    <h1><%= hero.hero_title %></h1>
                    <h4 style="font-weight:250"><%= hero.hero_subtitle %></h4>
                </div>
            </div>
        </div>
    </div>

    <section class="py-5 mt-5 mb-5" id="project_section">
        <div class="container py-md-5">
            <div class="row">
                <div class="col-sm-8 mx-auto text-center">
                    <h2 class="mt-3 mb-4"><%= projects_intro.header %></h2>
                    <hr style="width: 20%">
                    <h5 class="mt-4" style="color:gray"><%= projects_intro.subheader %></h5>
                </div>
            </div>

            <div class="row mt-5" align="center" data-aos="fade-up" data-aos-duration="1000">
                <% projects.forEach(function(item){ %>
                    <div class="col-lg-4 mb-4">
                        <a href="project?slug=<%= item.slug %>" style="text-decoration: none">
                            <div class="project" style="background-image:url(<%= item.image %>)">
                                <div class="project-info-wrapper">
                                    <div class="project-info">
                                        <div class="project-title">
                                            <div style="margin-left:2rem; margin-right:1rem"><h4><%= item.name %></h4></div>
                                        </div>
                                        <div class="project-subtitle">
                                            <div style="margin-left:2rem; margin-right:1rem"><p><%= item.category %></p></div>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>
    
    <%- include('partials/footer.ejs') %>
    <%- include('partials/scripts.ejs') %>
</body>

</html>